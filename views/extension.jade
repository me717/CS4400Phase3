extends layout

block content
  .ui.page.centered.grid
    .eight.wide.column
        h1(class="ui header") Request Extension on a Book
        form(class="ui form" id="extension-form")
            .ui.error.message
                .header(id="extension-error-header")
                p(id="extension-error-body")
            .field
                label Enter your Issue ID
                input(type="text" id="extension-issueID" placeholder="Issue ID")
            .field
                a(class="ui submit button" id="extension-issueid-btn") Search
    .eight.wide.column
        #extension-content.ui.form
            h1(class="ui header") Extension Details
            .two.fields
                .field
                    label Original Checkout Date
                    p(id="extension-originalcheckout")
                .field
                    label Current Extension Date
                    p(id="extension-currentextension")
            .two.fields
                .field
                    label New Checkout Date
                    p(id="extension-newcheckout")
                .field
                    label Current Return Date
                    p(id="extension-currentreturn")
            .two.fields
                .field
                    label New Estimated Return Date
                    p(id="extension-newreturn")
                .field
                    a(class="ui submit button" id="extension-submit-btn") Submit 